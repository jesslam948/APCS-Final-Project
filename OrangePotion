public class OrangePotion extends Potion{
	private int ORANGE_PRICE;
	private int O_RP;
	private ImageIcon orangePic;
	private int O_INDEX;
	
	public OrangePotion(){
		super();
		ORANGE_PRICE = 2;
		O_RP = 10;
		O_INDEX = 2;
		orangePic = new ImageIcon("H:\\New Folder\\orangepotion.jpg");
		Image orangePic1 = orangePic.getImage();
		Image orangePic2 = orangePic1.getScaledInstance(500, 500, Image.SCALE_SMOOTH);
		orangePic = new ImageIcon (orangePic2);
	}
	
	public int getPrice(){
		return ORANGE_PRICE;
	}
	public int getRP(){
		return O_RP;
	}
	public ImageIcon getImgIcon(){
		return orangePic;
	}
	public int getIndex(){
		return O_INDEX;
	}
}
