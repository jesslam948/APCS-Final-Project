

import javax.swing.JFrame;

import java.awt.*;          // access to Container

import javax.swing.*;       // access to JFrame and JComponents

import net.miginfocom.swing.MigLayout;



public class MenuGUI{

	private JFrame frame;
	private CatList catList;
	private JarPictLoader j;
	/**
	 * Launch the application.
	 */


	/**
	 * Create the application.
	 */
	
	
	public MenuGUI(CatList cl, JarPictLoader loader) {
		catList = cl;
		j = loader;
		initialize();
		frame.setVisible(true);
	}

	/**
	 * Initialize the contents of the frame.
	 */
	private void initialize() {
		frame = new JFrame();
		
		frame.setBounds(100, 100, 508, 568);
		frame.setExtendedState(JFrame.MAXIMIZED_BOTH);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.getContentPane().setLayout(new MigLayout("", "[grow]", "[grow]"));
		JLayeredPane pane = new JLayeredPane();
		pane.setBorder(null);
		frame.getContentPane().add(pane, "cell 0 0 2 1,grow");
/*		JLayeredPane layeredPane = new JLayeredPane();
		frame.getContentPane().add(layeredPane, "cell 0 0,grow");
		layeredPane.setLayout(new MigLayout("", "[grow]", "[grow][grow]"));
		
		JPanel panel_1 = new JPanel();
		layeredPane.setLayer(panel_1, 1);
		layeredPane.add(panel_1, "cell 0 0,grow");
		
		JPanel panel = new JPanel();
		layeredPane.add(panel, "cell 0 1,grow");
		*/
		
		ImageIcon imgIc = j.getfightScreenBG();
		Image img = imgIc.getImage();
		Image newImg = img.getScaledInstance(2000, 2000, Image.SCALE_SMOOTH);//lblNewLabel.getWidth(), lblNewLabel.getHeight(), Image.SCALE_SMOOTH);
		imgIc = new ImageIcon (newImg);
		
		BackgroundPanel backgnd = new BackgroundPanel(newImg);
		backgnd.setTransparentAdd(true);
		frame.getContentPane().add(backgnd);
		backgnd.setLayout(null);
		
		/*JLabel backgnd = new JLabel(imgIc);
		frame.getContentPane().add(backgnd, "");
		frame.setSize(800, 800);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		*/
		
		MenuClickListener l = new MenuClickListener(this);
		
		JButton fightButton = new JButton("Cats");
		fightButton.setBounds(900, 400, 200, 100);
		backgnd.add(fightButton);
		fightButton.addActionListener(l);
		
		JButton catButton = new JButton("Store");
		catButton.setBounds(900, 500, 200, 100);
		backgnd.add(catButton);
		catButton.addActionListener(l);
		
		
	}
	public void cats(){
		CLGUI c = new CLGUI(catList, j);
	}
	
	public void delete(){
		frame.dispose();
	}

	

	

//	private static void addPopup(Component component, final JPopupMenu popup) {
//	}
}
