public class Potion implements Item{
	private int POTION_PRICE;
	private int RP;
	private ImageIcon potionPic;
	private int P_INDEX;
	
	public Potion(){
		POTION_PRICE = 0;
		RP = 0;
		P_INDEX = -1;
		potionPic = new ImageIcon("H:\\New Folder\\questionmark.png");
		Image potionPic1 = potionPic.getImage();
		Image potionPic2 = potionPic1.getScaledInstance(500, 500, Image.SCALE_SMOOTH);
		potionPic = new ImageIcon (potionPic2);
	}
	
	public int getPrice(){
		return POTION_PRICE;
	}
	public int getRP(){
		return RP;
	}
	public ImageIcon getImgIcon(){
		return potionPic;
	}
	public int getIndex(){
		return P_INDEX;
	}
}
