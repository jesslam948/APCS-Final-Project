	private class CSClickListener implements ActionListener{

		@Override
		public void actionPerformed(ActionEvent event) {
			if (event.getSource() == btnNewButton_1){
				Cat cat1 = new Cat("mottled", 5, 5, 5, 5);
				CatSelections cs = new CatSelections();
				ArrayList<Cat> list = new ArrayList<Cat>();
				list.add(cat1);
				cs.setCats(list);
				System.out.println("Button 1 clicked");
				MenuGUI menu = new MenuGUI();
				
			}
			if (event.getSource() == btnNewButton){
				Cat cat1 = new Cat("black", 5, 5, 5, 5);
				CatSelections cs = new CatSelections();
				ArrayList<Cat> list = new ArrayList<Cat>();
				list.add(cat1);
				cs.setCats(list);
				System.out.println("Button clicked");
				MenuGUI menu = new MenuGUI();

			}
			if (event.getSource() == btnNewButton_2){
				Cat cat1 = new Cat("tabby", 5, 5, 5, 5);
				CatSelections cs = new CatSelections();
				ArrayList<Cat> list = new ArrayList<Cat>();
				list.add(cat1);
				cs.setCats(list);
				System.out.println("Button 2 clicked");
				MenuGUI menu = new MenuGUI();

			}
		}
		
	}
