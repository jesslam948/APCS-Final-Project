import java.awt.Image;

import javax.swing.ImageIcon;


public class GreenPotion extends Potion{
	private int GREEN_PRICE;
	private int G_RP;
	private ImageIcon greenPic;
	private int G_INDEX;
	
	public GreenPotion(){
		super();
		GREEN_PRICE = 3;
		G_RP = 15;
		G_INDEX = 3;
		greenPic = new ImageIcon("H:\\New Folder\\greenpotion.jpg");
		Image greenPic1 = greenPic.getImage();
		Image greenPic2 = greenPic1.getScaledInstance(500, 500, Image.SCALE_SMOOTH);
		greenPic = new ImageIcon (greenPic2);
	}
	
	public int getPrice(){
		return GREEN_PRICE;
	}
	public int getRP(){
		return G_RP;
	}
	public ImageIcon getImgIcon(){
		return greenPic;
	}
	public int getIndex(){
		return G_INDEX;
	}
}
