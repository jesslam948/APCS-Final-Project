import java.awt.*;

import javax.swing.ImageIcon;

public class PinkPotion extends Potion{
	private int PINK_PRICE;
	private int P_RP;
	private ImageIcon pinkPic;
	private int P_INDEX;
	
	public PinkPotion(){
		super();
		PINK_PRICE = 1;
		P_RP = 5;
		P_INDEX = 1;
		pinkPic = new ImageIcon("H:\\New Folder\\pinkpotion.jpg");
		Image pinkPic1 = pinkPic.getImage();
		Image pinkPic2 = pinkPic1.getScaledInstance(500, 500, Image.SCALE_SMOOTH);
		pinkPic = new ImageIcon (pinkPic2);
	}
	
	public int getPrice(){
		return PINK_PRICE;
	}
	public int getRP(){
		return P_RP;
	}
	public ImageIcon getImgIcon(){
		return pinkPic;
	}
	public int getIndex(){
		return P_INDEX;
	}
}
